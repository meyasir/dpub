<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--base application theme-->
    <style name="AppMaterialTheme" parent="SuperMaterialTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Parent theme for Pre-lollipop and lollipop above version i-e for all devices. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--type face should be given to the theme, as in the below.. for project-level typeFace,
         we've used a class in utilities, i-e darewro&TypefaceUtils-->
        <item name="android:typeface">sans</item><!--DECLAIMER: uninstall b4 testing for new typeFace-->
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">#00ffffff</item>
    </style>
    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>